# Project Configuration
project_name = "cyber-eda-aws"
region       = "us-east-1"

# VPC Configuration
vpc_cidr     = "10.0.0.0/16"
public_subnets = ["10.0.1.0/24", "10.0.2.0/24"]

# Security Configuration
# Leave empty to disable SSH access
allowed_ssh_cidr = ""

# Instance Configuration
instance_type = "t2.micro"

# S3 Configuration
# Leave empty to generate random bucket name
dataset_bucket_name = ""

# ACM Configuration (Optional)
enable_acm     = false
domain_name    = ""
hosted_zone_id = ""

# SNS Configuration (Optional)
enable_sns          = false
notification_email  = ""

# CloudWatch Configuration
alarm_cpu_threshold = 70

# WAF Configuration
waf_ip_deny_list = []
waf_rate_limit   = 2000
